<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>homePage</servlet-name>
        <servlet-class>ph.pup.itech.hrmgr.controller.homePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productForm</servlet-name>
        <servlet-class>ph.pup.itech.hrmgr.controller.productForm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userForm</servlet-name>
        <servlet-class>ph.pup.itech.hrmgr.controller.userForm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerCustomer</servlet-name>
        <servlet-class>ph.pup.itech.hrmgr.controller.registerCustomer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homePage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
   <servlet-mapping>
        <servlet-name>productForm</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productForm</servlet-name>
        <url-pattern>/product/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productForm</servlet-name>
        <url-pattern>/product/create/form</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productForm</servlet-name>
        <url-pattern>/product/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productForm</servlet-name>
        <url-pattern>/product/update/form</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productForm</servlet-name>
        <url-pattern>/product/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userForm</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userForm</servlet-name>
        <url-pattern>/user/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userForm</servlet-name>
        <url-pattern>/user/create/form</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userForm</servlet-name>
        <url-pattern>/user/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userForm</servlet-name>
        <url-pattern>/user/update/form</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userForm</servlet-name>
        <url-pattern>/user/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerCustomer</servlet-name>
        <url-pattern>/customer/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerCustomer</servlet-name>
        <url-pattern>/customer/registration</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
